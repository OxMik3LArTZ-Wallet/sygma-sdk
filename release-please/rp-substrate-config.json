{
  "plugins": ["node-workspace"],
  "pull-request-title-pattern": "chore: release ${scope} ${component} ${version}",
  "packages": {
    "packages/substrate": {
      "releaseType": "node",
      "draft": false,
      "prerelease": false,
      "bumpMinorPreMajor": false,
      "bumpPatchForMinorPreMajor": false,
      "changelogPath": "CHANGELOG.md",
      "versioning": "default"
    }
  }
}
